@model Note

@{
    ViewData["Title"] = "Edit Note";
}

<h2>Edit Note</h2>

<form asp-action="EditNote" method="post">
    <input type="hidden" asp-for="NoteId" />
    <div class="form-group">
        <label for="NoteText">Note:</label>
        <textarea class="form-control" asp-for="NoteText" required></textarea>
    </div>
    <div class="form-group">
        <label for="NoteDate">Date:</label>
        <input type="datetime" class="form-control" asp-for="NoteDate" required />
    </div>
    <button type="submit" class="btn btn-primary">Update Note</button>
</form>

<div class="mt-3">
    <a class="btn btn-secondary" asp-area="" asp-controller="User" asp-action="UserMenu">Menü</a>
</div>
